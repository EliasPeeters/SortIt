unit Duo;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, Types, CreateObjects, QuickSort, SliderSelector;

  var
    DuoDiagrambox1, DuoDiagrambox2: TDiagramBox;
    DuoDiagrambox1Image, DuoDiagrambox2Image: TImage;
    DuoDiagrambox1Bitmap, DuoDiagrambox2Bitmap: TBitmap;

    ArrayNumber: TArrayOfInteger;
    MaxNum: Integer = 30;

implementation

uses MainUnit, DrawUI, DrawDiagram;

procedure CreateDuo();
begin
  CreateDiagramBox(MainForm, DuoDiagrambox1, 100, 100, 650, 650, ArrayNumber, DuoDiagrambox1Image, DuoDiagrambox1Bitmap, MaxNum, 600, 600, 25, 25);
end;

procedure DrawDuo();
begin
   DrawDiagramProcedure(DuoDiagrambox1);
end;

end.
