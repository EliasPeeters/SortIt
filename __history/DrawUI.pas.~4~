unit DrawUI;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, Types;

  procedure DrawBox(Box: TBox);

implementation

uses Colors;

procedure DrawBox(Box: TBox);
begin
  with Box.Bitmap.Canvas do
  begin
    Brush.Color:= LightGrey;
    Pen.Color:= LightGrey;
    Rectangle(0,0, Box.Bitmap.Width, Box.Bitmap.Height);
    Brush.Color:= LightBoxColor;
    Pen.Color:= LightBoxColor;
    RoundRect(0,0,Box.Bitmap.Width, Box.Bitmap.Height, 30, 30);
  end;
end;

end.
