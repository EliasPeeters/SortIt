unit DrawDiagram;

interface
  uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Types;


 procedure DrawBarChart(DiagramBox: TDiagrambox);


implementation


procedure DrawBarChart(DiagramBox: TDiagrambox);
var
  BarWidth, BarHeight, x1, ExtraDistanz, GreyColor, I: Integer;

begin
  barWidth:= DiagramBox.Diagram.Width div (length(DiagramBox.Content));
  //ExtraDistanz:= BarWidth div length(DiagramBox.Content);
  ExtraDistanz:= 0;
  x1:= 0;
  with DiagramBox.Box.Bitmap.Canvas do
  begin
    Brush.Color:= clWhite;
    Pen.Color:= clWhite;
    Rectangle(0,0, DiagramBox.Diagram.Width, DiagramBox.Diagram.Height);

    MoveTo(0, DiagramBox.Diagram.Height+0);
    GreyColor:= 140;
    Pen.Style:= psSolid;
    Pen.Color:= rgb(GreyColor, GreyColor, GreyColor);
    LineTo(DiagramBox.Diagram.Width+0, DiagramBox.Diagram.Height+0);

    GreyColor:= 190;
    Pen.Style:= psDot;
    Pen.Color:= rgb(GreyColor, GreyColor, GreyColor);

    MoveTo(0, Round(DiagramBox.Diagram.Height * 1/4)+0);
    LineTo(DiagramBox.Diagram.Width+0, Round(DiagramBox.Diagram.Height * 1/4)+0);

    MoveTo(0, Round(DiagramBox.Diagram.Height * 2/4)+0);
    LineTo(DiagramBox.Diagram.Width+0, Round(DiagramBox.Diagram.Height * 2/4)+0);

    MoveTo(0, Round(DiagramBox.Diagram.Height * 3/4)+0);
    LineTo(DiagramBox.Diagram.Width+0, Round(DiagramBox.Diagram.Height * 3/4)+0);


    if DiagramBox.SelectedItem < 0 then
    begin
      Pen.Style:= psSolid;
      Pen.Color:= clwhite;
      Brush.Color:= rgb(88, 206, 162);


      for I := 0 to length(DiagramBox.Content)-1 do
      begin
        BarHeight:= (DiagramBox.Diagram.Height div DiagramBox.MaxNum)*DiagramBox.Content[i];
        Rectangle(x1, DiagramBox.Diagram.Height+0, x1+barWidth, DiagramBox.Diagram.Height-BarHeight+0);
        x1:= x1+BarWidth+ExtraDistanz;
      end;
    end

    else
    begin
      Pen.Style:= psSolid;
      Pen.Color:= clwhite;
      Brush.Color:= rgb(233, 233, 233);

      for I := 0 to length(DiagramBox.Content)-1 do
      begin
        if I = DiagramBox.SelectedItem then Brush.Color:= rgb(88, 206, 162)
        else Brush.Color:= rgb(233, 233, 233);

        BarHeight:= (DiagramBox.Diagram.Height div DiagramBox.MaxNum)*DiagramBox.Content[i];
        Rectangle(x1, DiagramBox.Diagram.Height, x1+barWidth, DiagramBox.Diagram.Height-BarHeight);
        x1:= x1+BarWidth+ExtraDistanz;
      end;
    end;

  end;
end;

end.

