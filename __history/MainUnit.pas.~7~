unit MainUnit;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, CreateObjects;

type
  TMainForm = class(TForm)
    procedure buttonClick(Sender: TObject);
    procedure ImageClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure DefineOnClick(ObjectVar: TObject; ObjectIdentifier: Integer);
  private
    { Private-Deklarationen }
  public
    { Public-Deklarationen }
  end;

var
  MainForm: TMainForm;
  Test: TButton;

  {
    1: Button
    2: Image
  }

implementation

{$R *.dfm}

procedure TMainForm.DefineOnClick(ObjectVar: TObject; ObjectIdentifier: Integer);
var
  Button: TButton;
  Image: TImage;
begin
  if ObjectIdentifier = 1 then
  begin
    Button:= ObjectVar;
    Button.OnClick:= ButtonClick;
  end

  else if ObjectIdentifier = 2 then
  begin
    Image:= ObjectVar;
    Image.OnClick:= ImageClick;
  end;
end;

procedure TMainForm.buttonClick(Sender: TObject);
var
  Button: TButton;
begin
  Button:= Sender as TButton;
  Button.Caption:= '2';
end;

procedure TMainForm.ImageClick(Sender: TObject);
var
  Image: TImage;
begin
  Image:= Sender as TImage;
  Image.Caption:= '2';
end;

procedure TMainForm.FormCreate(Sender: TObject);
begin
  CreateButton(Test, MainForm, 100, 100, 100, 100, 'Test');
  Test.OnClick:= FormCreate;
end;

end.
